.doctype {docs}
.doclang {English}
.theme {galactic} layout:{hyperlegible}

.numbering
    - example: 1

.css {.read {assets/style.css}}

.function {repolink}
    content href:
    .text {.content} url:{https://github.com/iamgio/quarkdown/.href}

.function {docslink}
    href:
    .html {<sup><a href="https://quarkdown.com/docs/.href" target="_blank">docs â†—</a></sup>}

.function {example}
    content:
    .numbered key:{example}
        num:
        .box {Example .num} type:{tip}
            .content

.function {examplemirror}
    quarkdowncode:
    .example {
        .code lang:{markdown} code:{.quarkdowncode}

        .container classname:{quarkdown-output} fullwidth:{yes} body:{.quarkdowncode}
    }

